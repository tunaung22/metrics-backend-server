@page "/Reports/Submissions/Department-Case-Feedback"
@model Metrics.Web.Pages.Reports.Submissions.DepartmentCaseFeedback.IndexModel
@using Metrics.Web.Models.PartialViewModels;
@{
    ViewData["Title"] = "Department Case Feedback Report";
}


<div class="sectionTitle">
    <div class="d-flex align-items-center my-2">
        <h4 class="flex-grow-1"><i class="bi bi-table"></i> Department Case Feedback Report</h4>
        <span class="justify-content-end gap-2"></span>
    </div>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Dashboard/Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-page="/Reports/Submissions/Index">Reports</a></li>
            <li class="breadcrumb-item active">Department Case Feedback</li>
        </ol>
    </nav>
</div>

<div class="container">
    <div class="bg-light p-4 rounded-2">
        <partial name="./List/_PeriodList" model="@(new PeriodListPartialModel {
            @* IncludeScripts = true, *@
            TableId = "reportTable",
            LinkBasePage = "/Reports/Submissions/DepartmentCaseFeedback",
            Periods = Model.KpiPeriodList,
            Buttons = new List<PeriodListButton> {
                // summary:     bi bi-clipboard-data-fill
                // detail:      bi bi-file-spreadsheet-fill
                new PeriodListButton { Page = "Summary", Text = "Summary", IconClass = "bi bi-clipboard-data-fill" },
                new PeriodListButton { Page = "Detail", Text = "Details", IconClass = "bi bi-file-spreadsheet-fill" }
            }
        })" />
    </div>  
</div>
