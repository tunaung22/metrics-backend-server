@section Scripts {
    <script>
        $(document).ready(function() {
            // ------------------- DATATABLE -----------------------------------
            if($(".summaryReportTable").length) {
                new DataTable('.summaryReportTable', {
                    paging: false,
                    info: true,
                    searching: false,
                    autoWidth: true,
                    scroller: true,
                    initComplete: function() {
                        $('.dataTable thead th').addClass('text-light text-center align-middle');
                        $('.dataTable thead th').addClass('bg-brand-color');
                        $('.dataTable tfoot th').addClass('bg-brand-color text-light');
                    },

                    footerCallback: function (row, data, start, end, display) {
                        let api = this.api();

                        // Remove the formatting to get numeric data for summation (handles decimals)
                        var floatVal = function (i) {
                            return typeof i === 'string'
                                ? parseFloat(i.replace(/[\$,]/g, '')) || 0
                                : typeof i === 'number'
                                ? i
                                : 0;
                        };

                        // Total over all pages (column 4 is "Received Score", index 4)
                        var total = api
                            .column(4)
                            .data()
                            .reduce(function (a, b) {
                                return floatVal(a) + floatVal(b);
                            }, 0);

                        // Update the Total Score cell (first footer row, last column)
                        $(api.column(4).footer()).html(
                            total.toFixed(2)
                        );

                        // Calculate and update final score (first footer row, second to last column shows "Total Score")
                        // We need to update the second footer row's last column
                        var finalScore = @Model.SummaryReport_Single?.FinalScore;
                        @* var finalScore = total ; *@
                        var footerRows = $(api.table().footer()).find('tr');
                        if (footerRows.length >= 2) {
                            // Update the Final Score cell (second footer row, last column)
                            $(footerRows[1]).find('td:last').html(
                                finalScore.toFixed(2)
                            );
                        }
                    }
                });
            }

            


