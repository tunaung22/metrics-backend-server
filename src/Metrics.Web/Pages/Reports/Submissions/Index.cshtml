@page "/Reports/Submissions"
@model Metrics.Web.Pages.Reports.Submissions.IndexModel
@{
    ViewData["Title"] = "Reports List for Department Score Submissions";
}


<div class="sectionTitle">
    <div class="d-flex align-items-center">
        <h4>Department Score Reports</h4>
        <span class="justify-content-end gap-2"></span>
    </div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Dashboard/Index">Dashboard</a></li>
            @* <li class="breadcrumb-item"><a aria-disabled="true">Reports</a></li> *@
            <li class="breadcrumb-item active">Reports</li>
        </ol>
    </nav>
</div>

<div class="container">
    <div class="row align-items-stretch">
        <div class="d-flex col-xs-12 col-md-4">
            <div class="card w-100 department-score">
                <div class="card-header">
                    <strong>Department scores (KPI Reports)</strong>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text">Department KPI Reports</p>
                    <div class="mt-auto text-end">
                        <a asp-page="./DepartmentKpi/Index" class="btn">View</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex col-xs-12 col-md-4">
            <div class="card w-100 department-metric-score">
                <div class="card-header">
                    <strong>KEY KPI Reports</strong>
                </div>
                <div class="card-body">
                    <p class="card-text">Department KEY KPI Reports</p>
                    <div class="mt-auto text-end">
                        <a asp-page="./DepartmentKeyKpi/Index" class="btn">View</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex col-xs-12 col-md-4">
            <div class="card w-100 department-case-feedback">
                <div class="card-header">
                    <strong>Case Feedback Reports</strong>
                </div>
                <div class="card-body">
                    <p class="card-text">Department Case Feedback Reports</p>
                    <div class="mt-auto text-end">
                        <a asp-page="./DepartmentCaseFeedback/Index" class="btn">View</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



