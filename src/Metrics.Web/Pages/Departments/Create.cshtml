@page
@model Metrics.Web.Pages.Departments.CreateModel
@{
}

<h3>Create New Department</h3>

@* ========================================================================== *@
@if (!ModelState.IsValid)
{
    <div class="alert alert-danger">
        <h4>There were some errors:</h4>
        <ul>
            @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

@* =============== Form ===================================================== *@
<form method="post" asp-page-handler="Create" asp-route-returnUrl="@Model.ReturnUrl">
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="Input.DepartmentName">Department Name</label>
            <input asp-for="Input.DepartmentName" class="form-control" />
            <div>
                <span asp-validation-for="Input.DepartmentName" class="text-danger"></span>
            </div>
        </div>
     
        <div class="form-group col-md-3 mt-4 d-flex align-items-bottom">
            <button type="submit" class="btn btn-primary">Add Department</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}