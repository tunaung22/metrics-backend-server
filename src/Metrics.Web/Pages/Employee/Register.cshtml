                @* </select> *@
            </div>
        </div>

        <div class="row">
            <div class="mb-3 col-md d-flex align-items-center">
                <button id="registerSubmit" type="submit" class="w-50 btn btn-lg btn-primary">
                    <i class="fas fa-plus">Register</i>
                </button>
            </div> 
        </div>



