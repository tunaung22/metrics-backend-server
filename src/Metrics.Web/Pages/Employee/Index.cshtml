@page
@model Metrics.Web.Pages.Employee.IndexModel
@{
}

<h3>Employee</h3>

<div class="mt-4">
    <a class="btn btn-success" asp-page="/Employee/Register">Register</a>
</div>

<div class="mt-4">
    <table id="employeeTable" class="table table-striped" style="width: 100%;">
        <thead>
            <tr>
                <th>Account</th>
                <th>Name</th>
                <th>Role</th>
                <th>Department</th>
                <th>Address</th>
                <th>Phone Number</th>
                @* <th>Actions</th> *@
            </tr>
        </thead>
        <tbody>
            @if (Model.EmployeeList.Any())
            {
                @foreach (var e in Model.EmployeeList)
                {
                    <tr>
                        <td>@e.UserAccount.UserName</td>
                        <td>@e.FullName</td>
                        <td>
                            @foreach(var r in e.UserRoles)
                            {
                                <p>@r</p>
                            }
                        </td>
                        <td>@e.DepartmentName</td>
                        <td>@e.Address</td>
                        <td>@e.PhoneNumber</td>
                        @* <td>
                            <button class="btn btn-success">
                                Edit
                            </button>
                        </td> *@
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


@section Scripts {
    <script>
        new DataTable('#employeeTable', {
            paging: false,
            info: false,
            searching: false
        });
    </script>
}