@page
@model Metrics.Web.Pages.Employee.SuccessModel
@{
    ViewData["Title"]= "Registration Successful";
}


<div class="container" style="height: 70vh;">
    @if (@Model.Username != null)
    {
        <h3>Success</h3>
        <div class="alert alert-success my-4">
            <h4 class="m-0">A new Employee created successfully!</h4>
        </div>

        <div class="">
            <div class="row mb-2">
                <div class="col col-3">Username</div>
                <div class="col"><strong>@Model.Username</strong></div>
            </div>
            <div class="row mb-2">
                <div class="col col-3">Name</div>
                <div class="col"><strong>@Model.FullName</strong></div>
            </div>
            <div class="row mb-2">
                <div class="col col-3">Role</div>
                <div class="col"><strong>@Model.RoleName</strong></div>
            </div>
        </div>

        <div class="my-4">
            <p>
                Add another <a asp-page="/Employee/Registe">Register</a>.
            </p>
        </div>
    }
    else
    {
        <div>
            <span>
                <h5>To add more employee, use the Registration Page.</h5>
                <a class="btn btn-link" asp-page="/Employee/Register">Register</a>
            </span>
        </div>
    }
</div>
