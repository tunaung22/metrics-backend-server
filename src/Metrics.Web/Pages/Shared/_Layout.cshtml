                            <li class="nav-item">
                                <a asp-page="/Submissions/Index"
                                    asp-area="" 
                                    class="nav-link @(currentUrl.StartsWithSegments("/submissions/") ? "activeLink" : "")">
                                        <i class="bi bi-ui-checks"></i> Score Submissions</a>
                            </li>
                        }
                        @* ===== Users who can give feedback (case feedback) ===== *@
