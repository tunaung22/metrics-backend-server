@using Metrics.Application.Authorization
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@{
    AuthorizationResult? canAccessAdminFeatures = await AuthorizationService.AuthorizeAsync(
        user: User, 
        policyName: ApplicationPolicies.CanAccessAdminFeaturesPolicy);
        
    AuthorizationResult? canSubmitKpiScore= await AuthorizationService.AuthorizeAsync(user: User, policyName: ApplicationPolicies.CanSubmitKpiScorePolicy);
    AuthorizationResult? canSubmitKeyKpiScore= await AuthorizationService.AuthorizeAsync(user: User, policyName: ApplicationPolicies.CanSubmitKpiScorePolicy);
    AuthorizationResult? canSubmitFeedbackScore= await AuthorizationService.AuthorizeAsync(user: User, policyName: ApplicationPolicies.CanSubmitKpiScorePolicy);
    bool canSubmitScore = (canSubmitKpiScore.Succeeded || canSubmitKeyKpiScore.Succeeded || canSubmitFeedbackScore.Succeeded);
    
    AuthorizationResult? canGiveFeedback = await AuthorizationService.AuthorizeAsync(
        user: User, 
        policyName: ApplicationPolicies.CanGiveFeedbackPolicy);
    
    @* var pathAndQuery = Context.Request.Path + Context.Request.QueryString; *@
    @* var currentUrl = $"{Context.Request.Scheme}://{Context.Request.Host}{pathAndQuery}"; *@
    var currentUrl = Context.Request.Path;
}

