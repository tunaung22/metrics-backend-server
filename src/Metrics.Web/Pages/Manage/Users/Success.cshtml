@page
@model Metrics.Web.Pages.Manage.Users.SuccessModel
@{
    ViewData["Title"]= "Registration Successful";
}


<div class="container" style="height: 70vh;">
    @if (@Model.Username != null)
    {
        <h3>Success</h3>
        <div class="alert alert-success my-4">
            <h4 class="m-0">A user was created successfully!</h4>
        </div>

        <div class="">
            <div class="row mb-2">
                <div class="col col-2">Username:</div>
                <div class="col"><strong>@Model.Username</strong></div>
            </div>
            <div class="row mb-2">
                <div class="col col-2">Name:</div>
                <div class="col"><strong>@Model.FullName</strong></div>
            </div>
            <div class="row mb-2">
                <div class="col col-2">Role:</div>
                <div class="col">
                    @if(Model.AssignedRoles.Any())
                    {
                        @foreach(var roleName in Model.AssignedRoles)
                        {
                            <span class="badge rounded-2 text-bg-primary">
                                <strong>@roleName</strong>
                            </span>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="my-4">
            <p>
                Add another <a class="" asp-page="/Manage/Users/Register">Register</a>.
            </p>
        </div>
    }
    else
    {
        <div>
            <span>
                <h5>To add more employee, use the Registration Page.</h5>
                <a class="" asp-page="/Manage/Users/Register">Register</a>
            </span>
        </div>
    }
</div>
