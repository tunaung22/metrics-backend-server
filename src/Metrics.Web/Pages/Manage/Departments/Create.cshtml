    <div class="col-5 border px-4 py-2 me-auto">
        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <div class="col justify-content-center">
                <div class="row">
                    <label asp-for="Input.DepartmentName" class="form-label">Department Name</label></div>
                <div class="row">
                    <input asp-for="Input.DepartmentName" id="input__departmentName" class="form-control" tabindex="1"/></div>
                <div class="row"><span asp-validation-for="Input.DepartmentName" class="text-danger"></span></div>

                <div class="form-group row my-2 mt-4">
                    <div class="d-flex justify-content-end pe-0 gap-2">
                        <button asp-page-handler="Cancel" 
                                type="submit" tabindex="3"
                                class="btn btn-warning ms-2" formnovalidate><i class="bi bi-x-circle"> </i>Cancel</button>
                        <button type="submit" tabindex="2"
                                class="btn btn-primary ms-2"><i class="bi bi-check-circle"> </i>Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
