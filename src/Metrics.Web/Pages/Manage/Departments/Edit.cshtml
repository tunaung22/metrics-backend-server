@page "/Manage/Departments/{departmentCode}/Edit"
@model Metrics.Web.Pages.Manage.Departments.EditModel
@{
    ViewData["Title"] = "Update Department";
}


<div class="sectionTitle">
    <h4>Edit Department</h4>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Dashboard/Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-page="/Manage/Departments/Index">Departments</a></li>
            <li class="breadcrumb-item active">Update</li>
        </ol>
    </nav>
</div>

<div class="container">

    @if (!ModelState.IsValid)
    {
        <div class="form bg-light p-4">
            <div class="alert alert-danger">
                <h4>There were some errors:</h4>
                <ul>
                    @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        </div>
    }

    <div class="col-5 border px-4 py-2 me-auto">
        <form method="post">
            <div class="col justify-content-center">
                <div class="row">
                    <label asp-for="FormInput.DepartmentName" class="form-label">Department Name</label>
                </div>
                <div class="row">
                    <input asp-for="FormInput.DepartmentName" id="input__departmentName" class="form-control" tabindex="1" /></div>
                <div class="row">
                    <span asp-validation-for="FormInput.DepartmentName" class="text-danger"></span></div>

                <div class="form-group row my-2 mt-4">
                    <div class="d-flex justify-content-end pe-0">
                        <button asp-page-handler="Cancel" 
                                type="submit" tabindex="3"
                                class="btn btn-warning ms-2" formnovalidate><i class="bi bi-x-circle"> </i>Cancel</button>
                        <button type="submit" tabindex="2"
                                class="btn btn-primary ms-2"><i class="bi bi-check-circle"> </i>Update</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts
{
    @* <partial name="_ValidationScriptsPartial" /> *@
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        $(document).ready(function() {
            $("#input__departmentName").focus().select();
        });

    </script>
}