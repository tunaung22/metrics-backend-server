@page "/Manage/Departments/{departmentCode}/Edit"
@model Metrics.Web.Pages.Manage.Departments.EditModel
@{
    ViewData["Title"] = "Update Department";
}

<div class="container">

    <h3>Edit Department</h3>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Dashboard/Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-page="/Manage/Departments/Index">Departments</a></li>
            <li class="breadcrumb-item active">Update</li>
        </ol>
    </nav>

    @if (!ModelState.IsValid)
    {
        <div class="form bg-light p-4">
            <div class="alert alert-danger">
                <h4>There were some errors:</h4>
                <ul>
                    @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        </div>
    }

    <div class="p-4">
        <form method="post">

            <div class="col-sm-12 col-md-6 col-xl-4 justify-content-center">
                <div class="row">
                    <label asp-for="FormInput.DepartmentName" class="form-label">Department Name</label>
                </div>

                <div class="row">
                    <input asp-for="FormInput.DepartmentName" id="input__departmentName" class="form-control" />
                </div>

                <div class="row">
                    <span asp-validation-for="FormInput.DepartmentName" class="text-danger"></span>
                </div>

                <div class="form-group row my-2 pe-0">
                    <div class="d-flex justify-content-end">
                        <button asp-page-handler="Cancel" type="submit"
                                class="btn btn-warning ms-2" formnovalidate>
                                    <i class="bi bi-x-circle"> </i>Cancel</button>
                        <button type="submit" 
                                class="btn btn-primary ms-2">
                                    <i class="bi bi-check-circle"> </i>Update</button>
                    </div>
                    @* <input type="" name="Id" value="@Model.UpdateModel.Id" /> *@
                    @* <input type="" name="DepartmentCode" value="@Model.UpdateModel.DepartmentCode" /> *@
                </div>
            </div>

        </form>
    </div>
</div>


@section Scripts
{
    @* <partial name="_ValidationScriptsPartial" /> *@
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        $(document).ready(function() {
            @* document.getElementById("input__departmentName").focus(); *@
            $("#input__departmentName").focus().select();
        });

    </script>
}