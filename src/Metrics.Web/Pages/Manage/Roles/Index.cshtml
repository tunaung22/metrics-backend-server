@model Metrics.Web.Pages.Manage.Roles.IndexModel
@{
     Layout = "/Pages/Shared/_Layout.cshtml";
}

<h3>Roles List</h3>

@* <div class="mt-4">
    <a class="btn btn-success" asp-page="/Employee/Register">New</a>
