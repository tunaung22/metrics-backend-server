@page "/Manage/Submissions/Key-Kpi/Department-Keys"
@model Metrics.Web.Pages.Manage.Submissions.KeyKpi.DepartmentKeys.IndexModel
@{
    ViewData["Title"] = "Department Key Metrics for Key KPI";
}

<div class="sectionTitle">
    <div class="d-flex align-items-center my-2">
        <h4 class="flex-grow-1"><i class="bi bi-ui-checks-grid"></i> Key KPI :: Department Keys</h4>
        <span class="justify-content-end gap-2">
            @* <a class="btn btn-success" 
                asp-page="Create"
                asp-route-returnUrl="@Url.Page("Index")">
                <i class="bi bi-plus-lg"> </i>New</a> *@
        </span>
    </div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="/Manage/Index">Manage</a></li>
            @* <li class="breadcrumb-item"><a asp-page="/Manage/Submissions/Index">Submissions</a></li> *@
            <li class="breadcrumb-item active">Department Keys</li>
        </ol>
    </nav>
</div>

<div class="container-fluid">
    <div class="bg-light p-4 rounded-2">
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @* =============== Filter Bar =============================================== *@
        <div id="filter-bar" class="d-flex align-items-center px-4 pt-4">
            <span class="d-flex flex-grow-1">
                <ul class="mono-text">
                    @{
                        var step1Text = "<div><strong>Setup 1: Issuing Keys</strong> <br/>This first step is to issues the key metrics for each department.<br/>[Who own which key metrics?]</div>";
                        var step2Text = "<div><strong>Setup 2: Assign Eligible Departments</strong> <br/>This step involves assigning which department users are eligible to submit scores for the keys.<br/>[Who can submit which department keys?]</div>";
                    }
                    <li>
                        Setp 1: Issue key metrics. 
                        <i class="bi bi-info-circle-fill"
                            data-bs-toggle="tooltip" 
                            data-bs-html="true"
                            data-bs-title="@step1Text"
                            data-bs-placement="right"></i>
                    </li>
                    <li>
                        Setp 2: Set key metrics to eligible departments.
                        <i class="bi bi-info-circle-fill" 
                            data-bs-toggle="tooltip" 
                            data-bs-html="true"
                            data-bs-title="@step2Text"
                            data-bs-placement="right"></i>
                    </li>
                </ul>
                @* <text class="me-2">Departments: </text> <strong>@Model.TotalDepartments</strong> *@
            </span>
            <div class="col-sm-4">
                @* <input class="form-control" placeholder="Filter..." /> *@
            </div>
        </div>

        @* ================ Table =================================================== *@
        <div class="px-4 pb-4">
            <table id="kpiPeriodTable" class="table table-bordered table-striped">
                <thead class="mono-text">
                    <tr>
                        <th rowspan="2">Period Name</th>
                        <th rowspan="2">Period</th>
                        <th colspan="2">Actions</th>
                    </tr>
                    <tr>
                        <th>Step 1: Department Keys</th>
                        <th>Step 2: Eligible Departments</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.KpiPeriodList.Any())
                    {
                        @foreach(var p in Model.KpiPeriodList)
                        {
                            <tr>
                                <td class="text-center">
                                    <strong>@p.PeriodName</strong>
                                    @* <a asp-page="View" 
                                        asp-route-periodName="@p.PeriodName"
                                        class="link-primary 
                                                link-offset-2 
                                                link-underline-opacity-25 
                                                link-underline-opacity-100-hover">
                                        <strong>@p.PeriodName</strong></a> *@
                                </td>
                                <td class="text-center mono-text">
                                    @p.SubmissionStartDate.ToLocalTime().ToString("MMM dd, yyyy") - 
                                    @p.SubmissionEndDate.ToLocalTime().ToString("MMM dd, yyyy")
                                </td>
                                <td class="text-center">
                                    <a asp-page="IssueKeys/Index" 
                                        asp-route-periodName="@Uri.EscapeDataString(@p.PeriodName)"
                                        class="btn btn-sm btn-outline-primary my-2 my-lg-0 me-2">
                                        <strong><i class="bi bi-ui-checks"></i> Issue Keys</strong></a>
                                    &nbsp;
                                    <a asp-page="IssueKeys/View" 
                                        asp-route-periodName="@Uri.EscapeDataString(@p.PeriodName)"
                                        class="btn btn-sm btn-outline-primary my-2 my-lg-0 me-2">
                                        <strong><i class="bi bi-card-checklist"></i> View</strong></a>
                                </td>
                                <td class="text-center">
                                    <a asp-page="AssignDepartments/Index" 
                                        asp-route-periodName="@Uri.EscapeDataString(@p.PeriodName)"
                                        class="btn btn-sm btn-outline-primary my-2 my-lg-0 me-2">
                                        <strong><i class="bi bi-check-circle-fill"></i> Assign Departments</strong></a>
                                    @* or &nbsp;
                                    <a asp-page="SubmissionAssignment" 
                                        asp-route-periodName="@p.PeriodName"
                                        class="btn btn-sm btn-outline-primary my-2 my-lg-0 me-2">
                                        <strong><i class="bi bi-check-circle-fill"></i> Copy Assign Keys</strong></a> *@
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @if(Model.TotalPages > 0)
        {
            <div class="p-4">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">

                        <li class="page-item @(!Model.ShowPrevious? "disabled":"")">
                            <a class="page-link"
                                asp-page="./Index"
                                asp-route-currentPage="@(Model.CurrentPage -1)">Previous</a>
                        </li>

                        @for(int i = 1; i <= Model.TotalPages; i++)
                        {
                            @* Model.Pagination.Page = i; *@

                            <li class="page-item">
                                <a class="page-link"
                                    asp-page="./Index"
                                    asp-route-currentPage="@i"
                                    >@i</a>
                            </li>
                        }

                        <li class="page-item @(!Model.ShowNext? "disabled":"")">
                            <a class="page-link" 
                                asp-page="./Index"
                                asp-route-currentPage="@(Model.CurrentPage + 1)">Next</a>
                        </li>

                    </ul>
                </nav>
            </div>
        }
    </div>
</div>


@section Scripts {
    <script>
        $(function() {
            new DataTable('#kpiPeriodTable', {
                paging: false,
                info: false,
                searching: false,
                autoWidth: true,
                columnDefs: [
                    @* { width: '35%', targets: [1] }, *@

                ],
                initComplete: function() {
                    $('thead th').addClass('text-light text-center align-middle');
                    $('thead th').addClass('bg-brand-color');
                }
            });
        });
    </script>
}