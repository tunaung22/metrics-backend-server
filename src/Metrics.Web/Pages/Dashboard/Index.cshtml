@page
@model Metrics.Web.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}


<div class="container">
    <h4>Dashboard</h4>

    <div class="row">
        <div class="col col-xs-12 col-sm-12 col-md-4 col-xl-3">
            <div class="card my-4">
                <div class="card-header">
                    Company
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item p-2">
                        <a asp-page="/Manage/Departments/Index">
                            <i class="bi bi-building"> </i>Departments</a></li>
                    <li class="list-group-item p-2">
                        <a asp-page="/Manage/Users/Index">
                            <i class="bi bi-person"> </i>Users</a></li>
                    <li class="list-group-item p-2">
                        <a asp-page="/Manage/Users/Groups/Index">
                            <i class="bi bi-people"> </i>Groups</a></li>
                    <li class="list-group-item p-2">
                        <a asp-page="/Manage/Roles/Index">
                            <i class="bi bi-person-lock"> </i>Authorities</a></li>
                </ul>
            </div>
        </div>
        <div class="col col-xs-12 col-sm-12 col-md-4 col-xl-3">
            <div class="card my-4">
                <div class="card-header">
                    Score Submissions
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item p-2">
                        <a class="" asp-page="/Manage/Submissions/Periods/Index">
                            <i class="bi bi-calendar2-week"> </i>Submissions Periods</a></li>
                    <li class="list-group-item p-2">
                        <a class="" asp-page="/Manage/Submissions/Departments/Scores/Index">
                            <i class="bi bi-clipboard2-check"> </i>Score Submissions Status</a></li>
                    <li class="list-group-item p-2 disabled" aria-disabled="true"><a href=""></a></li>
                    <li class="list-group-item p-2 disabled" aria-disabled="true"><a href=""></a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col col-xs-12 col-sm-12 col-md-5 col-xl-4">
            <div class="card my-4">
                <div class="card-header">
                    Reports
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item p-2">
                        <a class="" asp-page="/Reports/Submissions/Departments/Kpi/Index">
                            <i class="bi bi-clipboard2-data"> </i>Score Submissions (KPI)</a></li>
                    <li class="list-group-item p-2">
                        <a class="" asp-page="/Reports/Submissions/Departments/KeyKpi/Index">
                            <i class="bi bi-clipboard2-data"> </i>Metric Score Submissions (Key KPI)</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card .list-group-item > a {
            @* color: #0057ba; *@
            margin: .4em .4em;
            padding: .4em .4em;
        }
        .card .list-group-item > a:hover {
            @* color: #0099ff; *@
            @* background: #3465a443; *@
            @* color: #3465a4; *@
            @* border-radius: 0.4em; *@
        }
    </style>
}