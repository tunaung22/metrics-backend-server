@page
@model Metrics.Web.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<h3>Dashboard</h3>

<div class="container">
    <div class="row">
        <div class="col col-xs-12 col-sm-12 col-md-4 col-xl-3">
            <div class="card my-4">
                <div class="card-header">
                    Company
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item p-2"><a class="" asp-area="" asp-page="/Manage/Departments/Index"><i class="bi bi-building"></i> Departments</a></li>
                    <li class="list-group-item p-2"><a class="" asp-area="" asp-page="/Manage/Employee/Index"><i class="bi bi-person"></i> Employee</a></li>
                    <li class="list-group-item p-2"><a class="" asp-area="" asp-page="/Manage/Roles/Index"><i class="bi bi-person-lines-fill"></i> Roles</a></li>
                </ul>
            </div>
        </div>
        <div class="col col-xs-12 col-sm-12 col-md-4 col-xl-3">
            <div class="card my-4">
                <div class="card-header">
                    KPI
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item p-2"><a class="" asp-area="" asp-page="/Kpi/Periods/Index"><i class="bi bi-calendar2-week"></i> KPI Period List</a></li>
                    <li class="list-group-item p-2"><a class="" asp-area="" asp-page="/Kpi/Submissions/Index"><i class="bi bi-clipboard2-check"></i> Submissions</a></li>
                </ul>
            </div>
        </div>
        <div class="col col-xs-12 col-sm-12 col-md-4 col-xl-3">
            <div class="card my-4">
                <div class="card-header">
                    Reports
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item p-2"><a class="" asp-area="" asp-page="/Reports/Kpi/Submissions/Index"><i class="bi bi-clipboard2-data"></i> KPI Submissions</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card .list-group-item > a {
            @* color: #0057ba; *@
            margin: .4em .4em;
            padding: .4em .4em;
        }
        .card .list-group-item > a:hover {
            @* color: #0099ff; *@
            @* background: #3465a443; *@
            @* color: #3465a4; *@
            @* border-radius: 0.4em; *@
        }
    </style>
}