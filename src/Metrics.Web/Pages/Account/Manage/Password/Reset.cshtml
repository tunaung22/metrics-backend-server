@page
@model Metrics.Web.Pages.Account.Manage.Password.ResetModel
@{
    @* Layout = "/Pages/Shared/_AuthLayout.cshtml"; *@
    ViewData["Title"] = "Request Password Reset";
}

<div class="container">
    <h3>Request Password Reset</h3>
    <div class="col col-lg-12">
        <div class="row g-0">
            <div class="col col-sm-8 col-md-6 col-xl-4 mx-auto my-4">
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="mb-4">
                        <label asp-for="Input.UserName" class="form-label"></label>
                        <input asp-for="Input.UserName" 
                                class="form-control" 
                                aria-required="true" 
                                autocomplete="current-password" 
                                placeholder="Please enter your username." 
                                required />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Input.UserCode" class="form-label"></label>
                        <input asp-for="Input.UserCode" 
                                class="form-control" 
                                aria-required="true"
                                autocomplete="new-password" 
                                placeholder="Please enter your user code (aka. staff id)." 
                                required />
                        <span asp-validation-for="Input.UserCode" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-login btn-primary mb-3">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
        });
    </script>
}
