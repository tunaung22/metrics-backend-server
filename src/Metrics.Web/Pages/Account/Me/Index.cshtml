@page
@model Metrics.Web.Pages.Account.Me.IndexModel
@{
    @* Layout = "/Pages/Shared/_AuthLayout.cshtml"; *@
    ViewData["Title"] = "Profile";
    var UserInfo = @Model.UserInfo;
}

<div class="container">

    <div class="d-flex align-items-center my-2">
        <h4 class="flex-grow-1">Profile</h4>
    </div>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">Profile</li>
        </ol>
    </nav>

    <div class="col-12">
        <div class="row">
            <span class="justify-content-end gap-2">
            <a asp-page="./Edit" class="btn btn-success"><i class="bi bi-pencil-square"> </i>Edit</a>
            </span>
        </div>
        <div class="row">
            <div class="row mb-4">
                <div class="row mb-4"></div>
                    <div class="col col-3">Username:</div>
                    <div class="col col-9">@UserInfo.UserName</div>
                </div>
                <div class="row mb-4">
                    <div class="col col-3">Email:</div>
                    <div class="col col-9">@UserInfo.Email</div>
                </div>
                <div class="row mb-4">
                    <div class="col col-3">Full Name:</div>
                    <div class="col col-9">@UserInfo.FullName</div>
                </div>
                <div class="row mb-4">
                    <div class="col col-3">Group:</div>
                    <div class="col col-9">@UserInfo.TitleName</div>
                </div>
                <div class="row mb-4">
                    <div class="col col-3">User Code (staff id):</div>
                    <div class="col col-9">
                        <span id="text__userCode">@UserInfo.UserCode</span>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col col-3">Department:</div>
                    <div class="col col-9">@UserInfo.DepartmentName</div>
                </div>
                <div class="row mb-4">
                        <div class="col col-3">Address:</div>
                        <div class="col col-9">@UserInfo.ContactAddress</div>
                </div>
                <div class="row mb-4">
                        <div class="col col-3">Phone:</div>
                        <div class="col col-9">@UserInfo.PhoneNumber</div>
                </div>
                <div class="row mb-4">
                    <div class="col col-3">
                        Change password:
                    </div>
                    <div class="col col-9">
                        <a id="manage" class="" title="Change Password" href="/account/manage/password/change/">
                        <strong>Change</strong></a>
                    </div>
                </div>
                @* <div class="row mb-4">
                    <div class="col col-3">
                        <label for="">Reset Password:</label>
                    </div>
                    <div class="col col-9">
                        <a id="manage" class=" w-40" asp-area="" asp-page="/Account/Manage/Password/Reset" title="Profile">
                        <strong>Reset</strong></a>
                    </div>
                </div> *@
            </div>

        </div>
    </div>